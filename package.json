{
  "name": "silvernote",
  "productName": "Silvernote",
  "version": "0.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron .",
    "package": "electron-forge package",
    "build": "npm run build:win && npm run build:mac&linux",
    "build:win": "electron-builder",
    "build:mac&linux": "electron-forge make",
    "publish": "electron-forge publish",
    "maj:front": "node scripts/maj_front",
    "icon": "npx electron-icon-maker --input=resources/icon.png --output=resources"
  },
  "keywords": [],
  "author": {
    "name": "MisterPapaye",
    "email": "philippeetchtebaise@hotmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "unzipper": "^0.12.3",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/core": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },

  "build": {
    "appId": "com.silvercore.silvernote",
    "productName": "Silvernote",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icons/win/icon.ico",
      "uninstallerIcon": "resources/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }

}
