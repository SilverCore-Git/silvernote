{
  "name": "silvernote",
  "productName": "Silvernote",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/app.js",
  "scripts": {
    "start": "DEV=false electron-forge start",
    "dev": "DEV=true electron-forge start",
    "package": "electron-forge package",
    "build": "npm run build:win && npm run build:mac&linux",
    "build:win": "electron-builder",
    "build:mac&linux": "electron-forge make",
    "publish": "electron-forge publish",
    "maj:front": "node scripts/maj_front",
    "icon": "npx electron-icon-maker --input=resources/icon.png --output=resources"
  },
  "keywords": [],
  "author": {
    "name": "Silvercore",
    "url": "https://www.silvercore.fr"
  },
  "license": "MIT",
  "dependencies": {
    "nodemon": "^3.1.10",
    "unzipper": "^0.12.3",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/core": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.silvercore.silvernote",
    "productName": "Silvernote",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icons/win/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icons/win/icon.ico",
      "uninstallerIcon": "resources/icons/win/icon.ico",
      "installerHeaderIcon": "resources/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icons/mac/icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "dmg",
        "rpm"
      ],
      "category": "Utility",
      "icon": "resources/icons/png",
      "maintainer": "silvercore",
      "description": "Application de prise de note simple et intuitive."
    }
  }
}
